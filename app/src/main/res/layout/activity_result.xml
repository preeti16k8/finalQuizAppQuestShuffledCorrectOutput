<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout


    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context="com.kre8tive.quizapp.ResultActivity">


    <TextView
        android:id="@+id/tv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tm_gift"
        android:layout_marginTop="57dp"
        android:fontFamily="@font/interstatebold"
        android:gravity="center"
        android:minLines="2"
        android:letterSpacing="-0.05"
        android:lineSpacingMultiplier="1.2"
        android:textScaleX="1.1"
        android:text="Congratulations!\nYOU HAVE WON A COUPON FOR "
        android:textColor="@color/white"
        android:textSize="30sp" />


    <ImageView
        android:id="@+id/tm_gift"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/cup"
        android:visibility="visible" />

    <Button
        android:id="@+id/retry"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:background="@drawable/button"
        android:fontFamily="@font/interstatebold"
        android:padding="10dp"
        android:text="Play Again"
        android:textSize="15dp" />

</RelativeLayout>